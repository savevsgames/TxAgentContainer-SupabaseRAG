    {
      "key": "job_id",
      "value": "",
      "type": "string",
      "description": "Embedding job ID from /process-document endpoint"
    },
    {
      "key": "agent_id",
      "value": "",
      "type": "string",
      "description": "Agent session ID from /agents endpoint"
